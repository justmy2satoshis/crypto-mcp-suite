# Crypto MCP Suite - Environment Configuration Template
# Copy this file to .env and configure your settings

# =============================================================================
# INSTALLATION CONFIGURATION
# =============================================================================

# Installation tier (controls which MCPs start automatically)
# Options: essential, enhanced, advanced, premium, full
INSTALLATION_TIER=essential

# Log level (error, warn, info, debug, trace)
LOG_LEVEL=info

# =============================================================================
# DATABASE CONNECTIONS
# =============================================================================

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=crypto_mcp_suite
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

# TimescaleDB Extension (optional)
TIMESCALEDB_ENABLED=true

# =============================================================================
# TIER 1 - ESSENTIAL MCPs (Always Active)
# =============================================================================

# Memory Federation MCP
MEMORY_FEDERATION_PORT=3001
MEMORY_FEDERATION_STORAGE_PATH=./data/memory

# Filesystem Federation MCP
FILESYSTEM_FEDERATION_PORT=3002
FILESYSTEM_FEDERATION_ALLOWED_PATHS=C:\Users,C:\Projects

# GitHub Federation MCP
GITHUB_FEDERATION_PORT=3003
GITHUB_TOKEN=

# Expert Role Prompt MCP
EXPERT_ROLE_PROMPT_PORT=3004

# Sequential Thinking MCP
SEQUENTIAL_THINKING_PORT=3005

# Desktop Commander MCP
DESKTOP_COMMANDER_PORT=3006

# Web Search MCP
WEB_SEARCH_PORT=3007
BRAVE_API_KEY=

# =============================================================================
# TIER 2 - ENHANCED MCPs (Enhanced Tier and Above)
# =============================================================================

# Context7 MCP
CONTEXT7_PORT=3011

# Perplexity MCP
PERPLEXITY_PORT=3012
PERPLEXITY_API_KEY=

# Playwright MCP
PLAYWRIGHT_PORT=3013

# Notion MCP
NOTION_PORT=3014
NOTION_TOKEN=

# Git Ops MCP
GIT_OPS_PORT=3015

# Converse Enhanced MCP
CONVERSE_ENHANCED_PORT=3016
ANTHROPIC_API_KEY=

# GitHub Manager MCP
GITHUB_MANAGER_PORT=3017

# Brave Web Search MCP
BRAVE_WEB_SEARCH_PORT=3018

# =============================================================================
# TIER 3 - ADVANCED MCPs (Advanced Tier and Above)
# =============================================================================

# DuckDB MCP
DUCKDB_PORT=3021
DUCKDB_DATABASE_PATH=./data/duckdb/analytics.db

# PostgreSQL MCP Pro
POSTGRES_MCP_PRO_PORT=3022

# Kafka MCP
KAFKA_PORT=3023
KAFKA_BROKERS=localhost:9092

# MongoDB MCP
MONGODB_PORT=3024
MONGODB_URI=mongodb://localhost:27017

# Redis MCP
REDIS_MCP_PORT=3025

# SQLite MCP
SQLITE_PORT=3026
SQLITE_DATABASE_PATH=./data/sqlite/app.db

# =============================================================================
# TIER 4 - PREMIUM MCPs (Premium/Full Tier Only)
# =============================================================================

# Kimi K2 Code Context MCP
KIMI_CODE_CONTEXT_PORT=3031

# Kimi K2 Resilient MCP
KIMI_RESILIENT_PORT=3032

# RAG Context MCP
RAG_CONTEXT_PORT=3033

# Crypto Analytics MCP (Custom)
CRYPTO_ANALYTICS_PORT=3034

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================

# Cache TTL (seconds)
CACHE_TTL_SECONDS=300

# Cache eviction policy (allkeys-lru, volatile-lru, noeviction)
CACHE_EVICTION_POLICY=allkeys-lru

# Maximum cache size (MB)
CACHE_MAX_SIZE_MB=512

# =============================================================================
# RATE LIMITING
# =============================================================================

# Global rate limit (requests per minute)
RATE_LIMIT_RPM=60

# Per-MCP rate limits (override global)
# Format: MCP_NAME_RATE_LIMIT_RPM=value

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# Enable Prometheus metrics
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# =============================================================================
# PM2 CONFIGURATION
# =============================================================================

# PM2 instance name prefix
PM2_APP_PREFIX=crypto-mcp

# Max memory restart threshold (MB)
PM2_MAX_MEMORY_RESTART=500

# Auto-restart on crash
PM2_AUTO_RESTART=true

# Restart delay (ms)
PM2_RESTART_DELAY=1000

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Node environment (development, production)
NODE_ENV=production

# Enable debug mode
DEBUG_MODE=false

# Concurrent request limit per MCP
MAX_CONCURRENT_REQUESTS=10

# Request timeout (ms)
REQUEST_TIMEOUT_MS=30000
