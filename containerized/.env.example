# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Redis - Caching layer (60-80% API cost reduction)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PostgreSQL - Time-series and analytics storage
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=crypto_mcp_suite
POSTGRES_USER=crypto_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ============================================================================
# CACHE SETTINGS
# ============================================================================

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL_SECONDS=300

# Maximum cache size in MB (default: 512MB)
CACHE_MAX_SIZE_MB=512

# Cache eviction policy (allkeys-lru, volatile-lru, allkeys-random)
CACHE_EVICTION_POLICY=allkeys-lru

# ============================================================================
# RATE LIMITING
# ============================================================================

# Maximum requests per minute per MCP (default: 60)
RATE_LIMIT_RPM=60

# Burst allowance (default: 10)
RATE_LIMIT_BURST=10

# ============================================================================
# LOGGING
# ============================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Log format (json, pretty)
LOG_FORMAT=json

# Log file rotation (daily, size)
LOG_ROTATION=daily

# Maximum log file size in MB (default: 100MB)
LOG_MAX_SIZE_MB=100

# ============================================================================
# MONITORING
# ============================================================================

# Enable Prometheus metrics
ENABLE_METRICS=true

# Metrics port
METRICS_PORT=9090

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=30

# ============================================================================
# INSTALLATION MODE
# ============================================================================

# Installation tier (minimal, standard, premium, full)
# - minimal: Tier S only (10 MCPs)
# - standard: Tier S + A (20 MCPs)
# - premium: All tiers (25 MCPs)
# - full: All tiers + experimental (25+ MCPs)
INSTALLATION_MODE=standard

# ============================================================================
# ADVANCED SETTINGS (Optional)
# ============================================================================

# Custom MCP port range start (default: 3001)
MCP_PORT_START=3001

# Enable debug mode
DEBUG=false

# Timezone (default: UTC)
TZ=UTC

# Data retention days (default: 90)
DATA_RETENTION_DAYS=90

# Backup schedule (cron format, default: daily at 2 AM)
BACKUP_SCHEDULE=0 2 * * *

# Enable automatic updates
AUTO_UPDATE=false
